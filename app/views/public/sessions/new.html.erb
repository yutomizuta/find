<div class="container">
  <h2 class="my-4 text-center">ログイン</h2>
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
    <table class="mx-auto">
      <tbody>
        <tr>
          <td><%= f.label :メールアドレス %></td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </tr>
        <tr>
          <td><%= f.label :パスワード %></td>
          <td><%= f.password_field :password, autocomplete: "current-password" %>
          </td>
        </tr>
        <tr>
          <td>
            <% if devise_mapping.rememberable? %>
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
          <% end %></td>
        </tr>
        <tr>
          <td colspan="2"><%= f.submit "Log in", class: "btn btn-info btn-block" %></td>
        </tr>
      </tbody>
    </table>
  <% end %>
</div>
